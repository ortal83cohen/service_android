<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sbmobile="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.hpe.sb.mobile.app.common.uiComponents.metricFont.MetricFontCustomTextView
            android:id="@android:id/title"
            style="@style/TextStyle.Title.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:autoLink="web"
            android:ellipsize="end"
            android:linksClickable="true"
            android:textColorLink="@color/theme_accent"
            sbmobile:cleanHtmlTags="false" />
    </LinearLayout>

    <com.hpe.sb.mobile.app.common.uiComponents.metricFont.MetricFontCustomTextView
        android:id="@+id/show_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="19dp"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/arrow_link_down"
        android:padding="@dimen/minimum_margin"
        android:text="@string/show_more"
        android:textColor="@color/theme_accent"
        android:textSize="18sp"
        android:visibility="gone"/>
    <com.hpe.sb.mobile.app.common.uiComponents.metricFont.MetricFontCustomTextView
        android:id="@+id/show_less"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/arrow_link_up"
        android:padding="@dimen/minimum_margin"
        android:text="@string/show_less"
        android:textColor="@color/theme_accent"
        android:textSize="18sp"
        android:visibility="gone" />

</merge>