<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@color/error_page_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/access_denied_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/access_denied"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            />

        <com.hpe.sb.mobile.app.common.uiComponents.metricFont.MetricFontCustomTextView
            android:id="@+id/error_header_line_1"
            style="@style/TextStyle.ErrorTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/page_not_permitted_title_1"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="42dp"/>

        <com.hpe.sb.mobile.app.common.uiComponents.metricFont.MetricFontCustomTextView
            android:id="@+id/error_header_line_2"
            style="@style/TextStyle.ErrorTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/page_not_permitted_title_2"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>

        <com.hpe.sb.mobile.app.common.uiComponents.metricFont.MetricFontCustomTextView
            android:id="@+id/error_text_line1"
            style="@style/TextStyle.ErrorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/page_not_permitted_line1"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"/>
        />

        <com.hpe.sb.mobile.app.common.uiComponents.metricFont.MetricFontCustomTextView
            android:id="@+id/error_text_line2"
            style="@style/TextStyle.ErrorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/page_not_permitted_line2"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>
        />
        <com.hpe.sb.mobile.app.common.uiComponents.metricFont.MetricFontCustomTextView
            android:id="@+id/error_text_line3"
            style="@style/TextStyle.ErrorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/page_not_permitted_line3"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            />
        />

    </LinearLayout>

    <com.hpe.sb.mobile.app.common.uiComponents.metricFont.MetricFontCustomTextView
        android:id="@+id/error_action"
        style="@style/TextStyle.ErrorActionText"
        android:layout_width="@dimen/submit_button_width"
        android:layout_height="48.3dp"
        android:text="@string/page_not_permitted_action"
        android:background="@color/error_message_action_background_color"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"/>

</RelativeLayout>