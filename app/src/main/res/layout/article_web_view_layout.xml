<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:sbmobile="http://schemas.android.com/apk/res-auto"
              android:id="@+id/article_page_main_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/article_page_background"
              android:orientation="vertical"
              tools:context=".features.article.ArticleActivity">

    <LinearLayout
        android:id="@+id/article_page_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:paddingTop="@dimen/status_bar_height"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <ImageButton
                android:id="@+id/article_page_header_back"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/back_icon_content"
                android:background="@android:color/transparent"
                android:paddingEnd="19dp"
                android:paddingLeft="16dp"
                android:paddingRight="19dp"
                android:paddingStart="16dp"
                android:layout_marginTop="@dimen/status_bar_height"
                android:src="@drawable/back"
                />

            <com.hpe.sb.mobile.app.common.uiComponents.metricFont.MetricFontCustomTextView
                android:id="@+id/article_page_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/article_page_header_back"
                android:layout_toEndOf="@+id/article_page_header_back"
                android:ellipsize="end"
                android:gravity="fill"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:typeface="sans"
                style="@style/TextStyle.Header"
                sbmobile:cleanHtmlTags="true"
                android:maxLines="1"
                />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/article_page_background"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:sbmobile="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/article_web_view_inner_background_color"
                            android:orientation="horizontal"
                            android:paddingLeft="24dp"
                            android:paddingRight="24dp"
                            android:paddingTop="23dp"
                            android:visibility="invisible"
                >

                <com.hpe.sb.mobile.app.common.uiComponents.entityIcon.EntityIconImageView
                    android:id="@+id/article_icon"
                    android:layout_width="@dimen/related_entity_list_item_image_size"
                    android:layout_height="@dimen/related_entity_list_item_image_size"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:contentDescription="@string/category_page_related_entity_image_content"
                    />

                <com.hpe.sb.mobile.app.common.uiComponents.metricFont.MetricFontCustomTextView
                    android:id="@+id/article_title"
                    style="@style/TextStyle.Title.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_toEndOf="@+id/article_icon"
                    android:layout_toRightOf="@+id/article_icon"
                    android:paddingBottom="2dp"
                    android:typeface="sans"
                    sbmobile:cleanHtmlTags="true"
                    />

                <com.hpe.sb.mobile.app.common.uiComponents.metricFont.MetricFontCustomTextView
                    android:id="@+id/article_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/article_title"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@+id/article_icon"
                    android:layout_toRightOf="@+id/article_icon"
                    android:background="@drawable/article_badge"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textColor="@color/related_entities_article_badge_color"
                    android:typeface="sans"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/article_type"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/separator"
                    />
            </RelativeLayout>

            <com.hpe.sb.mobile.app.common.uiComponents.gifView.CustomGifView
                android:id="@+id/loading_gif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                />

            <RelativeLayout
                android:id="@+id/web_view_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:background="@color/article_web_view_inner_background_color"
                >

                <WebView
                    android:id="@+id/appWebView"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/article_web_view_inner_background_color"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="20dp"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/article_page_background"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
