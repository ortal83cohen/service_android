<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:sbmobile="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">


    <View
        android:id="@+id/ViewColorPickerHelper"
        android:layout_width="1dip"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/dividerVertical"/>

    <com.hpe.sb.mobile.app.common.uiComponents.metricFont.MetricFontCustomButton
        android:id="@+id/card_button_deny"
        style="@style/cardButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/ViewColorPickerHelper"
        android:layout_toStartOf="@id/ViewColorPickerHelper"
        android:drawableLeft="@drawable/icon_deny"
        android:drawableStart="@drawable/icon_deny"
        android:paddingLeft="42dp"
        android:drawablePadding="3dp"
        android:paddingRight="22dp"
        android:text="@string/deny"
        />

    <com.hpe.sb.mobile.app.common.uiComponents.metricFont.MetricFontCustomButton
        android:id="@+id/card_button_approve"
        style="@style/cardButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/ViewColorPickerHelper"
        android:layout_toRightOf="@id/ViewColorPickerHelper"
        android:drawableLeft="@drawable/icon_approve"
        android:drawableStart="@drawable/icon_approve"
        android:paddingLeft="25dp"
        android:paddingStart="25dp"
        android:drawablePadding="3dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:text="@string/approve"
        />

</RelativeLayout>